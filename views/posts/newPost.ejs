<%- include('../partials/header') -%>
<div class="container">
    <h3>Post Form</h3>
    <form method="POST" action="/posts" enctype="multipart/form-data">
        <div class="row">
            <div class="form-group col-6">
                <label for="post-title">Post Title</label>
                <input type="text" class="form-control" id="post-title" name="title" placeholder="Post Title">
              </div>
              <div class="form-group col-6">
                <label for="post-category">Post Category</label>
                <select class="form-control" id="post-category" name="category">
                  <option>Lifestyle</option>
                  <option>Asia Expat</option>
                  <option>Travel</option>
                  <option>Style</option>
                </select>
              </div>
        </div>
        <div class="form-group">
          <label for="post-discription">Example textarea</label>
          <textarea class="form-control" id="post-discription" name="content" rows="5"></textarea>
        </div>
        <div class="form-group">
            <label for="post-images">
                <input type="file" id="post-images" name="post-image" name=" postImages">
            </label>
        </div>
        <input type="submit">
    </form>
</div>
<%- include('../partials/footer') -%>